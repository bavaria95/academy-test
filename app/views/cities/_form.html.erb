<div class="authform">
<%= form_for(@city, :html => {:role => 'form'}) do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, autofocus: true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :short_name %>
      <%= f.text_field :short_name, class: 'form-control' %>
    </div>
    <%= f.submit 'Create', :class => 'button right' %>
    <%= link_to 'Go back!', cities_path, class: 'button btn btn-info' %>
<% end %>
</div>